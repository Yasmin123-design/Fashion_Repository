@model ClothesStore.ViewModel.ProductWithCategoryVM

<h1>@Model.Category_Name</h1>
<br />
<style>
    .product-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); /* تغيير عدد الأعمدة وحجم العناصر */
        gap: 15px; /* يمكنك تعديل المسافة بين العناصر حسب الحاجة */
    }

    .product-item {
        display: flex;
        flex-direction: column;
        border: 1px solid #ddd;
        border-radius: 4px;
        overflow: hidden;
    }

    .thumbnail {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

        .thumbnail img {
            width: 100%;
            height: 200px; /* تحديد ارتفاع ثابت للصورة */
            object-fit: cover; /* ضمان تغطية الصورة بالكامل */
        }

    .caption {
        padding: 10px;
    }
</style>
<div class="product-container">
    @foreach (var item in Model.Products)
    {
        <div class="product-item">
            <div class="thumbnail">
                <img src="/Images/@item.Image" alt="@item.Name" />
            </div>
            <div class="caption">
                <h3 class="pull-right">@item.Price.ToString("c")</h3>
                <h3>
                    <a>@item.Name</a>
                </h3>
                <p>@item.Description</p>
            </div>
        </div>
    }
</div>
